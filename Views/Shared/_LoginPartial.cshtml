@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link page-scroll dropdown-toggle" asp-area="Identity" title="Manage">مرحبا @User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light">تسجيل الخروج</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item dropdown">
            <a  class="nav-link page-scroll dropdown-toggle" asp-area="Identity" asp-page="/Account/Login">تسجيل الدخول</a>
        </li>
        @*<li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">تسجيل الدخول</a>
        </li>*@
    }
</ul>
